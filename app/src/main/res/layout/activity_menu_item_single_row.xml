<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="4dp"
        android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/admin_menu_item_image"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout"
            android:layout_alignParentTop="true" />

    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <CheckBox
                android:id="@+id/menu_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dip"
                android:checked="false" />

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/delete"
                android:layout_marginRight="2dip" />

        </LinearLayout>

        <TextView
            android:id="@+id/admin_menu_item_name"
            android:textColor="#FF212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewItemName"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignLeft="@+id/admin_menu_item_price"
            android:layout_alignStart="@+id/admin_menu_item_price" />

        <TextView
            android:id="@+id/admin_menu_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewItemPrice"
            android:layout_below="@+id/admin_menu_item_name"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout" />

</RelativeLayout>

