<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_menuItem_Title"
        android:padding="10dp"
        android:background="#ffccff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Add Menu Items"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp" >


        <EditText
            android:id="@+id/ed_menuItem_Name"
            android:layout_width="254dp"
            android:layout_height="63dp"
            android:layout_marginTop="5dp"
            style="@style/editext_graybg"
            android:hint="Menu-Item Name">
        </EditText>

        <EditText
            android:id="@+id/ed_menuItem_Desc"
            android:layout_width="254dp"
            android:layout_height="63dp"
            android:layout_marginTop="5dp"
            style="@style/editext_graybg"
            android:hint="Description">
        </EditText>
        <EditText
            android:id="@+id/ed_menuItem_Price"
            android:layout_width="254dp"
            android:layout_height="63dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            style="@style/editext_graybg"
            android:hint="Price">
        </EditText>
        <LinearLayout
            android:id="@+id/main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="270dp"
                android:layout_height="70dp"
                style="@style/btn_white_large"
                android:layout_marginLeft="10dp"
                android:text="SUBMIT"
                android:layout_weight="1.70" />
        </LinearLayout>

</LinearLayout>
</LinearLayout>